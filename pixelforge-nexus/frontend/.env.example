# PixelForge Nexus Frontend Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL
REACT_APP_API_URL=http://localhost:3001/api

# WebSocket URL (if using real-time features)
REACT_APP_WS_URL=ws://localhost:3001

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
REACT_APP_ENVIRONMENT=development

# Application Name
REACT_APP_NAME=PixelForge Nexus

# Application Version
REACT_APP_VERSION=1.0.0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Content Security Policy
REACT_APP_CSP_ENABLED=true

# Security Monitoring
REACT_APP_SECURITY_MONITORING=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
REACT_APP_ENABLE_MFA=true
REACT_APP_ENABLE_DARK_MODE=false
REACT_APP_ENABLE_ANALYTICS=false

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Debug Mode
REACT_APP_DEBUG=false

# Show Development Tools
REACT_APP_SHOW_DEV_TOOLS=false

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics
REACT_APP_GA_TRACKING_ID=

# Sentry Error Tracking
REACT_APP_SENTRY_DSN=

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,gif,txt,doc,docx

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Theme Configuration
REACT_APP_PRIMARY_COLOR=#3b82f6
REACT_APP_SECONDARY_COLOR=#6b7280

# Branding
REACT_APP_LOGO_URL=/logo.png
REACT_APP_FAVICON_URL=/favicon.ico

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Bundle Analysis
ANALYZE=false

# Source Maps (disable in production)
GENERATE_SOURCEMAP=true
